<div>
  <h2>{{name}}</h2>
  <div class="content">
    <div class="content__list">
      <ul>
        <li><span class="bold">Capital: </span>{{capital}}</li>
        <li><span class="bold">Population: </span>{{population}}</li>
        <li><span class="bold">Languages:</span>
          <ul>
            {{#each languages}}
            <li>{{name}}</li>
            {{/each}}
          </ul>
        </li>
      </ul>
    </div>
    <div>
      <img src="{{flags.png}}" alt="{{name}}" width="280">
    </div>
  </div>
</div>